<% if (title) { %>
    <h1><%= title %></h1>
<% } %>

<%- messages() %>

<section class="inv-management">
    <div class="management-header">
        <h2>Inventory Management System</h2>
        <p>Use the links below to manage classifications and inventory items</p>
    </div>

    <div class="management-actions">
        <div class="action-card">
            <h3>Task 2: Add Classifications</h3>
            <p>Add new vehicle classifications to the system</p>
            <a href="/inv/add-classification" class="btn btn-primary" title="Add a new classification">Add New Classification</a>
        </div>

        <div class="action-card">
            <h3>Task 3: Add Inventory</h3>
            <p>Add new vehicles to the inventory</p>
            <a href="/inv/add-inventory" class="btn btn-primary" title="Add a new inventory item">Add New Inventory Item</a>
        </div>
    </div>

    <hr>

    <div class="inventory-management">
        <h2>Manage Existing Inventory</h2>
        <p>Select a classification to view and manage vehicles</p>
        
        <div class="filter-section">
            <label for="classificationList">Choose Classification:</label>
            <%- classificationSelect %>
        </div>

        <table id="inventoryDisplay" class="inventory-table"></table>
        <noscript><p class="notice">JavaScript must be enabled to use this feature</p></noscript>
    </div>

    <script src="../../js/inventory.js"></script>
</section>