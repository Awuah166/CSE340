<% if (title) { %>
    <h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>


<form id="classificationForm" class="classification-form" action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name</label>
    <span class="classification-hint">Name must contain only letters and numbers. No special characters or spaces</span>

    <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z0-9]+$" value="<%= locals.classification_name || '' %>"/>
    <button type="submit" class="classification-submit">Add Classification</button>
</form>